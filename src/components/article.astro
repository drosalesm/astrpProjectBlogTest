---
import { type CollectionEntry } from 'astro:content'
import FormatedDate from '@/components/FormatedDate.astro';
import { Image } from 'astro:assets';



type Props= CollectionEntry<"blog">["data"] & {slug:string};

const {heroImage,title,tags,pubDate,slug}=Astro.props;

console.log(slug)

---

<li class="rounded-xl border border-extra-soft-white text-soft-white transition-colors duration-200 hover:bg-soft-light">
    <div transition:name={title}>
        <article>
            <a href={`/blog/${slug}`}>
                <Image
                    src={heroImage}
                    alt=""
                    width={1020}
                    height={520}
                    class="aspect-[16/5] rounded-t-xl object-cover"
                />
                <div class="w-full">
                    <div class="flex flex-col px-12 py-4">
                        <h4 class="text-3xl font-bold">
                            {title}
                        </h4>
                        <div class="flex gap-2">
                            {tags.map(
                                (tag) => (
                                    <span class="mt-4 self-start rounded border border-extra-soft-white px-2 py-1 text-zinc-400">
                                        {tag}
                                    </span>
                                ),
                            )}
                        </div>
                            <FormatedDate date={pubDate}/>
                    </div>
                </div>
            </a>
        </article>
    </div>
</li>