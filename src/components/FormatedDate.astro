---
interface Props {
    date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()} class="mt-6 text-sm text-zinc-400">
    {
        date.toLocaleDateString("es-es", {
            year: "numeric",
            month: "long",
            day: "numeric",
        })
    }
</time>
